<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.22" />
  <template class="MirdorphMessage" parent="GtkListBoxRow">
    <!-- Margin top fits most usecases for having gaps between messages-->
    <property name="margin-top">5</property>
    <child>
      <object class="GtkBox">
        <property name="visible">True</property>
        <property name="orientation">horizontal</property>
        <property name="spacing">5</property>
        <child>
          <object class="GtkBox" id="_avatar_box">
            <property name="visible">True</property>
            <property name="orientation">vertical</property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="visible">True</property>
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkLabel" id="_username_label">
                <property name="visible">True</property>
                <property name="use-markup">True</property>
                <property name="xalign">0.0</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="_message_label">
                <property name="visible">True</property>
                <property name="wrap">True</property>
                <property name="wrap-mode">2</property>
                <property name="selectable">True</property>
                <property name="xalign">0.0</property>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="_attachment_box">
                <property name="visible">True</property>
                <property name="orientation">vertical</property>
                <property name="spacing">5</property>
              </object>
              <packing>
                <property name="expand">True</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="expand">True</property>
          </packing>
        </child>
      </object>
    </child>
    <style>
      <class name="discord-message" />
    </style>
  </template>
</interface>
