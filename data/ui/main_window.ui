<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>
  <object class="GtkPopover" id="_basic_add_channel_popover">
    <property name="visible">False</property>
    <property name="relative-to">_add_server_button</property>
    <signal name="closed" handler="_on_basic_add_channel_popover_closed"/>
    <child>
      <object class="GtkEntry" id="_add_channel_entry">
        <property name="visible">True</property>
        <property name="activates-default">True</property>
        <signal name="activate" handler="_on_add_channel_entry_activate"/>
      </object>
    </child>
  </object>
  <template class="MirdorphMainWindow" parent="HdyApplicationWindow">
    <property name="default-width">1010</property>
    <property name="default-height">585</property>
    <signal name="destroy" handler="_on_window_destroy"/>
    <child>
      <object class="HdyDeck">
        <property name="visible">True</property>
        <child>
          <object class="HdyFlap" id="main_flap">
            <property name="visible">True</property>
            <property name="swipe-to-close">False</property>
            <property name="modal">True</property>
            <child type="flap">
              <object class="GtkBox" id="_flap_box">
                <property name="visible">True</property>
                <property name="orientation">vertical</property>
                <child>
                  <object class="HdyHeaderBar">
                    <property name="visible">True</property>
                    <child>
                      <object class="GtkToggleButton" id="_add_server_button">
                        <property name="visible">True</property>
                        <property name="image">_add_server_button_image</property>
                        <signal name="toggled" handler="_on_add_server_button_toggled"/>
                        <child>
                          <object class="GtkImage" id="_add_server_button_image">
                            <property name="visible">True</property>
                            <property name="icon-name">list-add-symbolic</property>
                          </object>
                        </child>
                        <style>
                          <class name="image-button"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkMenuButton" id="_main_menu_button">
                        <property name="visible">True</property>
                        <child>
                          <object class="GtkImage">
                            <property name="visible">True</property>
                            <property name="icon-name">open-menu-symbolic</property>
                          </object>
                        </child>
                      </object>
                      <packing>
                        <property name="pack-type">end</property>
                      </packing>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child type="separator">
              <object class="GtkSeparator">
                <property name="visible">True</property>
                <style>
                  <class name="vertical"/>
                </style>
              </object>
            </child>
            <child type="content">
              <object class="GtkStack" id="context_stack">
                <property name="visible">True</property>
                <!-- NOTE: This will not work with already poped out windows, however it should be enough -->
                <!-- since windows are currently never popped out by default -->
                <!-- and by then adding messages with events has already taken over -->
                <signal name="notify::visible-child" handler="_on_context_stack_focus_change"/>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
